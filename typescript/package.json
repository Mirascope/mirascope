{
  "name": "mirascope",
  "version": "2.0.0-alpha.0",
  "workspaces": [
    "examples"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./transform": "./src/transform/index.ts",
    "./vite": "./src/transform/plugins/vite.ts",
    "./esbuild": "./src/transform/plugins/esbuild.ts",
    "./bun": "./src/bun.ts"
  },
  "scripts": {
    "build": "bun x tsc --build tsconfig.json",
    "typecheck": "bun x tsc --build tsconfig.json",
    "lint": "bun run typecheck && bun run lint:oxlint && bun run format:check",
    "lint:oxlint": "oxlint .",
    "lint:oxlint:fix": "oxlint --fix .",
    "format": "oxfmt --ignore-path .oxfmtignore .",
    "format:check": "oxfmt --ignore-path .oxfmtignore --check .",
    "fix": "bun run format && bun run lint:oxlint:fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "codegen": "bun run scripts/codegen/run.ts",
    "example": "bun run scripts/run-example.ts"
  },
  "dependencies": {
    "partial-json": "^0.1.7"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/genai": "^1.0.0",
    "@pollyjs/adapter-fetch": "^6.0.7",
    "@pollyjs/core": "^6.0.6",
    "@pollyjs/persister": "^6.0.6",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/bun": "latest",
    "@vitest/coverage-v8": "^3.0.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.25.5",
    "jiti": "^2.4.2",
    "openai": "^6.16.0",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "tslib": "^2.8.1",
    "typescript": "^5",
    "vite": "^6.3.5",
    "vitest": "^3.0.0",
    "yaml": "^2.7.0",
    "zod": "^4.0.0"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": ">=0.71.0",
    "@google/genai": ">=1.0.0",
    "@rollup/plugin-typescript": ">=11.0.0",
    "esbuild": ">=0.17.0",
    "openai": "^6.16.0",
    "vite": ">=4.0.0",
    "zod": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/sdk": {
      "optional": true
    },
    "@google/genai": {
      "optional": true
    },
    "openai": {
      "optional": true
    },
    "zod": {
      "optional": true
    },
    "@rollup/plugin-typescript": {
      "optional": true
    },
    "esbuild": {
      "optional": true
    },
    "vite": {
      "optional": true
    }
  }
}
