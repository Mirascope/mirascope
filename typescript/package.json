{
  "name": "mirascope",
  "version": "2.0.0-alpha.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "workspaces": [
    "examples"
  ],
  "scripts": {
    "build": "bun x tsc --build tsconfig.json",
    "typecheck": "bun x tsc --build tsconfig.json",
    "lint": "bun run typecheck && bun run lint:eslint && bun run format:check",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fix": "bun run format && bun run lint:eslint:fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "codegen": "bun run scripts/codegen/run.ts"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": ">=0.71.0",
    "@google/genai": ">=1.0.0",
    "openai": "^6.16.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/sdk": {
      "optional": true
    },
    "@google/genai": {
      "optional": true
    },
    "openai": {
      "optional": true
    }
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/genai": "^1.0.0",
    "openai": "^6.16.0",
    "@eslint/js": "^9.37.0",
    "@pollyjs/adapter-fetch": "^6.0.7",
    "@pollyjs/core": "^6.0.6",
    "@pollyjs/persister": "^6.0.6",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "^3.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "jiti": "^2.4.2",
    "prettier": "^3.6.0",
    "typescript": "^5",
    "vitest": "^3.0.0",
    "yaml": "^2.7.0"
  }
}
