{
  "name": "mirascope-typescript",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun x tsc --build mirascope/tsconfig.json",
    "typecheck": "bun x tsc --build mirascope/tsconfig.json",
    "lint": "bun run typecheck && bun run lint:eslint && bun run format:check",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fix": "bun run format && bun run lint:eslint:fix",
    "test": "bun run --cwd mirascope test"
  },
  "workspaces": [
    "mirascope",
    "examples"
  ],
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "jiti": "^2.4.2",
    "prettier": "^3.6.0",
    "typescript": "^5"
  }
}
