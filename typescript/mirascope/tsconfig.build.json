{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node16",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
