{
  "name": "mirascope",
  "private": true,
  "scripts": {
    "docs:clean": "rm -rf .docs-content dist",
    "docs:copy": "mkdir -p .docs-content && cp -r mirascope/experimental/v2/docs .docs-content/ && cp -r mirascope/experimental/v2/examples .docs-content/",
    "docs:api": "PYTHONPATH=. uv run api2mdx --source-path . --package mirascope.experimental.v2.llm --output .docs-content/docs/api",
    "docs:merge-api": "bun scripts/merge-api-meta.ts",
    "docs:serve": "bun node_modules/@mirascope/docs-viewer/scripts/start.ts --content-dir .docs-content --working-dir dist",
    "docs:build": "bun docs:clean && bun docs:copy && bun docs:api && bun docs:merge-api",
    "docs:dev": "bun docs:build && bun docs:serve"
  },
  "devDependencies": {
    "@mirascope/docs-viewer": "0.4.8",
    "@types/node": "^24.0.0"
  }
}
