{
  "name": "claw-dispatch-worker",
  "version": "1.0.0",
  "private": true,
  "description": "Dispatch worker for Mirascope Claws - routes requests to per-claw Cloudflare Sandbox containers",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "types": "wrangler types",
    "typecheck": "tsc --noEmit",
    "lint:oxlint": "oxlint .",
    "lint": "bun run typecheck && bun run lint:oxlint",
    "test": "vitest run",
    "test:unit": "vitest run -c vitest.config.ts",
    "test:integration": "vitest run -c vitest.integration.config.ts",
    "test:all": "bun run test:unit && bun run test:integration",
    "test:watch": "vitest"
  },
  "dependencies": {
    "hono": "^4.11.6"
  },
  "devDependencies": {
    "@cloudflare/sandbox": "*",
    "@cloudflare/workers-types": "^4.20250109.0",
    "oxlint": "^1.42.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wrangler": "^4.50.0"
  }
}
